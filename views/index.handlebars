<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}

        <div class="card mb-3">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <img class="card-img-top" src="{{this.image}}" alt="Sababa 沙巴巴中東美食">
          </a>
          <div class="card-body p-2">
            <a href="/restaurants/{{this._id}}" class="text-secondary">
              <h6 class="card-title mb-1">{{this.name}}
                <i class="fa-solid fa-circle-info text-info"></i>
              </h6>
            </a>

            <div class="restaurant-category mt-2">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>

            <div class="d-flex justify-content-between">

              <span class="badge rounded-pill bg-danger font-weight-normal my-1">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>



              <span>
                <a href="/restaurants/{{this._id}}/edit" class="fs-5 mx-2" style="text-decoration: none;">
                  <i class="fa-solid fa-pen-to-square"></i>
                </a>

                <a href="/restaurants/{{this._id}}" class="fs-5 text-info mx-2" style="text-decoration: none;">
                  <i class="fa-solid fa-circle-info"></i>
                </a>

                <a href="/restaurants/{{this._id}}/delete" class="text-secondary fs-5 mx-2"
                  onclick="confirm('Once deleted it will not be restored')">
                  <i class="fa-solid fa-trash-can"></i>
                </a>
              </span>
            </div>


          </div>
        </div>
        {{/each}}

      </div>
    </div>
  </div>
</div>