<h1 class="mb-1 restaurant-show-title">新增餐廳
</h1>
<div class="container-fluid  d-flex justify-content-center">
  <form action="/restaurants" method="POST">
    <div class="row mb-3">
      <label for="id" class="col-sm-3 col-form-label">id: </label>
      <div class="col-sm-5">
        <input name="id" type="number" placeholder="1~100" min="1" max="100" class="form-control" required>
      </div>
    </div>

    <div class="row mb-3">
      <label for="name" class="col-sm-3 col-form-label">餐廳中文名稱: </label>
      <div class="col-sm-5">
        <input name="name" type="text" placeholder="好吃牛肉麵" class="form-control" required>
      </div>
    </div>

    <div class="row mb-3">
      <label for="name_en" class="col-sm-3 col-form-label">餐廳英文名稱: </label>
      <div class="col-sm-5">
        <input name="name_en" type="text" placeholder="delicious beef noodles" class="form-control" required>
      </div>
    </div>

    <div class="row mb-3">
      <label for="category" class="col-sm-3 col-form-label">種類: </label>
      <div class="col-sm-5">
        <input name="category" type="text" placeholder="中式料理、咖啡廳、早餐店..." class="form-control" required>
      </div>
    </div>

    <div class="row mb-3">
      <label for="image" class="col-sm-3 col-form-label">圖片連結: </label>
      <div class="col-sm-5">
        <input name="image" type="text" placeholder="https://.....jpg" class="form-control" required>
      </div>
    </div>

    <div class="row mb-3">
      <label for="location" class="col-sm-3 col-form-label">地點: </label>
      <div class="col-sm-5">
        <input name="location" type="text" placeholder="407台中市西屯區大墩路911號" class="form-control" required>
      </div>
    </div>

    <div class="row mb-3">
      <label for="phone" class="col-sm-3 col-form-label">電話: </label>
      <div class="col-sm-5">
        <input name="phone" type="text" placeholder="02 2222 3333" class="form-control" required>
      </div>
    </div>

    <div class="row mb-3">
      <label for="google_map" class="col-sm-3 col-form-label">google map 位址: </label>
      <div class="col-sm-5">
        <input name="google_map" type="text" placeholder="https://goo.gl/maps/152HScBEGsDoqCoPA" class="form-control"
          required>
      </div>
    </div>

    <div class="row mb-3">
      <label for="rating" class="col-sm-3 col-form-label">評分: </label>
      <div class="col-sm-5">
        <input name="rating" type="number" placeholder="0~5" min="0" max="5" step="0.1" class="form-control" required>
      </div>
    </div>

    <div class="row mb-3">
      <label for="description" class="col-sm-3 col-form-label">餐廳的介紹: </label>
      <div class="col-sm-5">
        <textarea id="description" name="description" rows="5" cols="100" class="form-control" required></textarea>
      </div>
    </div>

    <div class="mb-3 justify-content-center">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>